<div class="navbar navbar-expand-sm navbar-light navbar-lewa">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag("logo.png") %>
    <% end %>

    <div id="navbarSupportedContent">
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item <%= 'active' if current_page?(courses_path) %>">
            <%= link_to "Courses", courses_path, class: "nav-link" %>
          </li>
          <li class="nav-item <%= 'active' if current_page?(registrations_path) %>">
            <%= link_to "Registrations", registrations_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Log out", destroy_user_session_path, class: "nav-link", data: {turbo_method: :delete} %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
